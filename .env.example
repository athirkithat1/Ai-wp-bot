# Environment Configuration for WhatsApp UserBot

# Application Settings
NODE_ENV=production
PORT=5000
LOG_LEVEL=INFO

# WhatsApp Configuration
WHATSAPP_SESSION_NAME=whatsapp-userbot
WHATSAPP_HEADLESS=true

# Security Settings
# Add trusted phone numbers (optional)
TRUSTED_CONTACTS=+1234567890,+0987654321

# Rate Limiting
MAX_MESSAGES_PER_MINUTE=10
MAX_MESSAGES_PER_HOUR=100
MAX_MESSAGES_PER_DAY=500

# Business Hours (optional)
BUSINESS_HOURS_ENABLED=false
BUSINESS_START_TIME=09:00
BUSINESS_END_TIME=17:00
BUSINESS_TIMEZONE=UTC

# Features
ENABLE_NLP=true
RESPOND_TO_GROUPS=false
ENABLE_TYPING_INDICATOR=true
SAVE_CONVERSATION_HISTORY=false

# Admin Notifications (optional)
ADMIN_PHONE_NUMBER=
ENABLE_ERROR_NOTIFICATIONS=false
ENABLE_DAILY_STATS=false

# External Services (if needed)
# API_KEY=your_api_key_here
# WEBHOOK_URL=https://your-webhook-url.com

# Database (if implementing conversation history)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=whatsapp_bot
# DB_USER=username
# DB_PASSWORD=password

# Backup Settings
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL_HOURS=24
